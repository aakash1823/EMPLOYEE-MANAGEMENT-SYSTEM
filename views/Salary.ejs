      <main id="main">

        <!-- ======= About Section ======= -->

        <section id="back" class="back">
            <h1 class="we2">Salary</h1>
            <form method='POST' action='http://localhost:8080/add/salary'>
              <!-- Roll_no, S_Fname, S_Lname, Gender, DOB, Year_enrolled, S_password, Email, Address, Dept_id -->
                
                <div class="form-row">
                    
                    <div class="form-group col-md-6">
                      <label class="dark">Employee ID</label>
                      <input name="Employee_id" type="text" class="form-control" id="Employee_id" placeholder="ID" value="<%= sal.Employee_id %>">
                    </div>
                    <div class="form-group col-md-6">
                      <label class="dark">Department</label>
                      <input name="Dept" id="inputState" class="form-control" value="<%= sal.Dept %>">
                      
                </DIV>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                      <label class="dark">Name</label>
                      <input type="text" name='name' class="form-control" id="name" placeholder="name" value="<%= sal.name %>">
                    </div>
                    <div class="form-group col-md-6">
                      <label class="dark">DOB</label>
                      <input name='DOB' type="date" class="form-control" id="DOB" placeholder="DOB" value="<%= sal.DOB %>">
                    </div>
                  </div>
                
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label class="dark">Email</label>
                    <input name='Email' type="email" class="form-control" id="Email" placeholder="@gmail.com" value="<%= sal.Email %>">
                  </div>
                  <div class="form-group col-md-6">
                    <label class="dark">Phone number</label>
                    <input type="number" class="form-control" id="phone" name="Pnumber" placeholder="Phoneno"value="<%= sal.Pnumber %>">
                  </div>
                  </div>
                  <div class="form-row">
                    
                    <div class="form-group col-md-6">
                      <label>Gender</label>
                      <input name="Gender" id="inputState1" class="form-control"value="<%= sal.Gender %>">
                      
                    </div>  
                    <div class="form-group col-md-3">
                        <label class="dark">Leave Taken:</label>
                        <input name='Leave' type="number" class="form-control" id="Leave"value="<%= 30-tot.total %>">
                      </div>
                      <div class="form-group col-md-3">
                        <label class="dark">Amount Reduced:</label>
                        <input name='Red' type="number" class="form-control" id="Red"value="<%= sal.Salary/30*(30-tot.total) %>">
                      </div>
                  </div>
                   
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label class="dark">Address</label>
                        <input name="Address" type="text" class="form-control" id="Address" placeholder="Address" value="<%= sal.Address %>">
                    </div>
                    <div class="form-group col-md-6">
                      <label class="dark">Total Salary:</label>
                      <input name='Salary' type="number" class="form-control" id="Salary"value="<%= sal.Salary/30*tot.total %>">
                    </div>
                    </div>
                    
               
                
                    <button type="submit" class="btn btn-dark submit sub" id="submit" >Submit</button>
              </form> 

              <br>
              
          
        </section>
